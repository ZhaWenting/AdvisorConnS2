<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InvitationFromDarkNet.activity.XEAChatActivityS2">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/title_bg_s2">

        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/avatar_ll"
            android:layout_width="@dimen/margin_top6"
            android:layout_height="@dimen/loading_margin"
            android:layout_marginLeft="@dimen/ending_top"
            android:background="@mipmap/avatar_bg_s2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xea_avatar_s2" />

        </LinearLayout>

        <TextView
           android:layout_alignParentBottom="true"
            android:layout_width="@dimen/margin_top2"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/avatar_ll"
            android:gravity="center"
            android:text="XEA"
            android:textColor="@color/chat_top"
            android:textSize="@dimen/titleText" />


        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/config"
            android:layout_width="@dimen/navi"
            android:layout_height="@dimen/navi"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/ending_top"
            android:padding="@dimen/tiny_margin"
            android:src="@mipmap/config_s2" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@mipmap/chat_body_s2">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/pop_margin"
            android:layout_marginBottom="@dimen/pop_margin"
            android:layout_marginLeft="@dimen/pop_margin"
            android:layout_marginRight="@dimen/ending_top2">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/send_bg_s2"
        android:orientation="horizontal">

        <TextView
            android:padding="@dimen/widget_margin2"
            android:gravity="center_vertical"
            android:id="@+id/send_text_season2"
            android:textColor="@color/cardview_dark_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/widget_margin4"
            android:layout_marginLeft="@dimen/widget_margin"
            android:layout_marginTop="@dimen/widget_margin4"
            android:layout_weight="8"
            android:background="@mipmap/send_text_s2" />

        <ImageView
            android:id="@+id/send_bt_season2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/ending_top2"
            android:layout_weight="2"
            android:src="@mipmap/send_bt_s2" />
    </LinearLayout>

</LinearLayout>